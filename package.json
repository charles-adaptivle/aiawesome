{
  "name": "local_aiawesome",
  "version": "1.0.0",
  "description": "AI Awesome - React slide-out AI chat for Moodle",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node fix-amd.js",
    "preview": "vite preview",
    "lint": "eslint amd/src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint amd/src --ext js,jsx --fix"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "vite": "^5.0.8"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime",
      "plugin:react-hooks/recommended"
    ],
    "ignorePatterns": [
      "dist",
      ".eslintrc.cjs",
      "amd/build",
      "fix-amd.js"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "18.2"
      }
    },
    "rules": {
      "react-refresh/only-export-components": [
        "warn",
        {
          "allowConstantExport": true
        }
      ],
      "no-restricted-imports": [
        "error",
        {
          "patterns": [
            {
              "group": ["jquery", "$"],
              "message": "jQuery is not allowed in this project. Use modern Web APIs instead."
            }
          ]
        }
      ],
      "no-restricted-globals": [
        "error",
        {
          "name": "$",
          "message": "jQuery global $ is not allowed. Use modern Web APIs instead."
        },
        {
          "name": "jQuery",
          "message": "jQuery global is not allowed. Use modern Web APIs instead."
        }
      ]
    }
  }
}